@{
    Layout = null;
}

@model Account

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #333;
            overflow: hidden;
            position: relative;
        }

        .login-container {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 400px;
            animation: fadeIn 1s ease-in-out, moveUp 1s ease-in-out;
        }

        .login-container h1 {
            margin-bottom: 30px;
            font-size: 24px;
            font-weight: bold;
            animation: slideInDown 0.5s ease-in-out;
        }

        .input-container {
            position: relative;
            margin: 30px 0;
            text-align: left;
        }

        .input-container input[type="text"],
        .input-container input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 2px solid #ccc;
            border-radius: 6px;
            background: #fafafa;
            color: #333;
            font-size: 16px;
            box-shadow: inset 0 3px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
        }

        .input-container input[type="text"]:focus,
        .input-container input[type="password"]:focus {
            border: 2px solid #00bcd4;
            outline: none;
            background: #fff;
            box-shadow: 0 0 5px rgba(0, 188, 212, 0.5);
        }

        .input-container label {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            background: #fff;
            padding: 0 5px;
            transition: all 0.3s ease-in-out;
            pointer-events: none;
            color: #999;
            font-size: 16px;
        }

        .input-container input:focus + label,
        .input-container input:not(:placeholder-shown) + label {
            top: -10px;
            left: 10px;
            font-size: 12px;
            color: #00bcd4;
        }

        .login-container input[type="submit"] {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 4px;
            background: #00bcd4;
            color: #fff;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s, transform 0.3s;
            margin-top: 20px;
        }

        .login-container input[type="submit"]:hover {
            background: #008c9e;
        }

        .login-container a {
            color: #00bcd4;
            text-decoration: none;
            font-size: 14px;
            margin: 10px;
            display: inline-block;
            transition: color 0.3s ease-in-out;
        }

        .login-container a:hover {
            text-decoration: underline;
        }

        .error-message {
            color: red;
        }

    </style>
</head>
<body>
    <div class="login-container">
        <h1>Login</h1>

        @if (ViewBag.Error != null)
        {
                <div class="error-message">@ViewBag.Error</div>
        }

        <!-- Use Html.BeginForm to handle form submission -->
        @using (Html.BeginForm("", "Login", FormMethod.Post))
        {
                <div class="input-container">
                    <!-- Username input styled like a formbox -->
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = " " })
                    <label for="username">Username</label>
                </div>
                <div class="input-container">
                    <!-- Password input styled like a formbox -->
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = " " })
                    <label for="password">Password</label>
                </div>
                <input type="submit" value="Login" />
        }

        <br />
        <a href="/Register">Create new account</a>
        <a href="#">Forgot password?</a>
    </div>
</body>
</html>
