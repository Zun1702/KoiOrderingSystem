<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Koi ordering system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/testingmvc.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* Footer Link Styles */
        .footer-link {
            color: #ffffff !important; /* Force white color */
            text-decoration: none;
        }

            .footer-link:hover {
                color: #5BB2F1 !important; /* Change color on hover */
                text-decoration: none;
            }

        /* Footer Heading Styles */
        .footer-heading {
            color: #5BB2F1;
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* General Text Styling in Footer */
        footer p, footer a, footer {
            color: #ffffff;
        }

        footer {
            margin: 0;
            padding: 0;
            padding-top: 20px; /* Add some padding at the top for content spacing */
            padding-bottom: 20px; /* Add some padding at the bottom if needed */
        }

        /* Ensure the footer is positioned correctly and no white space is left */
        html, body {
            height: 100%; /* Ensure the body and HTML fill the entire height */
        }

        body {
            display: flex;
            flex-direction: column;
            margin: 0;
        }

        footer {
            margin-top: auto; /* Push footer to the bottom */
        }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HomePage">testingmvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomePage1">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-heading">Company</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">About Us</a></li>
                        <li><a href="#" class="footer-link">Our Services</a></li>
                        <li><a href="#" class="footer-link">Privacy Policy</a></li>
                        <li><a href="#" class="footer-link">Affiliate Program</a></li>
                    </ul>
                </div>
                <!-- Get Help -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-heading">Get Help</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">FAQ</a></li>
                        <li><a href="#" class="footer-link">Shipping Info</a></li>
                        <li><a href="#" class="footer-link">Returns & Exchanges</a></li>
                        <li><a href="#" class="footer-link">Order Tracking</a></li>
                        <li><a href="#" class="footer-link">Payment Methods</a></li>
                    </ul>
                </div>
                <!-- Our Services -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-heading">Our Services</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">Consulting</a></li>
                        <li><a href="#" class="footer-link">Training Programs</a></li>
                        <li><a href="#" class="footer-link">Project Management</a></li>
                        <li><a href="#" class="footer-link">Custom Solutions</a></li>
                    </ul>
                </div>
                <!-- Follow Us -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-heading">Connect With Us</h5>
                    <p>Stay updated by following us on social media:</p>
                    <div class="d-flex">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-linkedin fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-youtube fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4 text-white">
            <p class="mb-0">© 2024 Your Company. All Rights Reserved.</p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
