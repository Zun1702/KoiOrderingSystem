@{
    Layout = null;
}
@model KoiOrderingSystem.Models.Account

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Appointment Scheduler</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #333;
        }

        .register-container {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 400px;
        }

            .register-container h1 {
                margin-bottom: 30px;
                font-size: 24px;
                font-weight: bold;
            }

        .input-container {
            position: relative;
            margin: 30px 0;
            text-align: left;
        }

            .input-container input[type="text"],
            .input-container input[type="password"],
            .input-container input[type="email"],
            .input-container input[type="date"],
            .input-container select {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                background: #fafafa;
                color: #333;
                font-size: 16px;
                transition: all 0.3s ease-in-out;
                box-sizing: border-box;
            }

            .input-container label {
                position: absolute;
                top: 15px;
                left: 15px;
                background: #fff;
                padding: 0 5px;
                transition: all 0.3s ease-in-out;
                pointer-events: none;
                color: #999;
                font-size: 16px;
                z-index: 1;
            }

            .input-container input:focus,
            .input-container select:focus {
                border: 1px solid #00bcd4;
                outline: none;
                background: #fff;
            }

                .input-container input:focus + label,
                .input-container input:not(:placeholder-shown) + label,
                .input-container select:focus + label,
                .input-container select:not(:placeholder-shown) + label {
                    top: -10px;
                    left: 10px;
                    font-size: 12px;
                    color: #00bcd4;
                    background: transparent;
                    padding: 0 3px;
                    z-index: 2;
                }

        .register-container input[type="submit"] {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 4px;
            background: #00bcd4;
            color: #fff;
            font-size: 18px;
            cursor: pointer;
            margin-top: 20px;
            transition: background 0.3s, transform 0.3s;
        }

            .register-container input[type="submit"]:hover {
                background: #008c9e;
            }

        .register-container a {
            color: #00bcd4;
            text-decoration: none;
            font-size: 14px;
            margin: 10px;
            display: inline-block;
            transition: color 0.3s ease-in-out;
        }

            .register-container a:hover {
                text-decoration: underline;
            }

        .error-message {
            color: red;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h1>Create New Account</h1>
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div class="input-container">
                <input asp-for="Username" required />
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="error-message"></span>
            </div>
            <div class="input-container">
                <input asp-for="Password" type="password" required id="Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="error-message"></span>
            </div>
            <div class="input-container">
                <input type="password" id="ConfirmPassword" required placeholder="Confirm Password" />
                <label for="ConfirmPassword">Confirm Password</label>
                <span class="error-message" id="confirmPasswordError"></span>
            </div>
            <div class="input-container">
                <input asp-for="Email" required />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="error-message"></span>
            </div>
            <div class="input-container">
                <input asp-for="Firstname" required />
                <label asp-for="Firstname"></label>
                <span asp-validation-for="Firstname" class="error-message"></span>
            </div>
            <div class="input-container">
                <input asp-for="Lastname" required />
                <label asp-for="Lastname"></label>
                <span asp-validation-for="Lastname" class="error-message"></span>
            </div>
            <div class="input-container">
                <input asp-for="Phone" required />
                <label asp-for="Phone"></label>
                <span asp-validation-for="Phone" class="error-message"></span>
            </div>
            <input type="submit" value="Register" />
        </form>
        <br />
        <a href="~/Account/Login">Back to Login</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Highlight input fields on form submit
            $('form').on('submit', function (e) {
                let isValid = true;
                $('.input-container input').css('border', '');
                $('input[required]').each(function () {
                    if ($(this).val() === '') {
                        $(this).css('border', '2px solid red');
                        isValid = false;
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert("Please fill out all required fields.");
                }
            });

            // Real-time password validation
            $('#Password').on('input', function () {
                const passwordInput = $(this);
                const password = passwordInput.val();
                const minLength = 8;
                if (password.length < minLength) {
                    passwordInput.css('border', '2px solid red');
                    passwordInput.next('.error-message').text(`Password must be at least ${minLength} characters long.`);
                } else {
                    passwordInput.css('border', '2px solid green');
                    passwordInput.next('.error-message').text('');
                }
            });

            // Confirm password validation
            $('#ConfirmPassword').on('input', function () {
                const confirmPasswordInput = $(this);
                const password = $('#Password').val();
                if (confirmPasswordInput.val() !== password) {
                    confirmPasswordInput.css('border', '2px solid red');
                    confirmPasswordInput.next('.error-message').text('Passwords do not match.');
                } else {
                    confirmPasswordInput.css('border', '2px solid green');
                    confirmPasswordInput.next('.error-message').text('');
                }
            });

            // Clear error messages on focus
            $('.input-container input').on('focus', function () {
                $(this).css('border', '');
                $(this).next('.error-message').text('');
            });
        });
        $(document).ready(function () {
            // Highlight input fields on form submit
            $('form').on('submit', function (e) {
                let isValid = true;
                $('.input-container input').css('border', '');
                $('input[required]').each(function () {
                    if ($(this).val() === '') {
                        $(this).css('border', '2px solid red');
                        isValid = false;
                    }
                });

                // Validate password confirmation
                const password = $('#Password').val();
                const confirmPassword = $('#ConfirmPassword').val();
                if (password !== confirmPassword) {
                    $('#ConfirmPassword').css('border', '2px solid red');
                    $('#confirmPasswordError').text('Passwords do not match.').css('color', 'red');
                    isValid = false;
                } else {
                    $('#ConfirmPassword').css('border', '2px solid green');
                    $('#confirmPasswordError').text('');
                }

                if (!isValid) {
                    e.preventDefault();
                    alert("Please fill out all required fields correctly.");
                }
            });

            // Clear error messages on focus
            $('.input-container input').on('focus', function () {
                $(this).css('border', '');
                $(this).next('.error-message').text('');
            });
        });
    </script>
</body>
</html>
